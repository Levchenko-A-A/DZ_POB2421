<Window x:Class="HW_OOP_84.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_OOP_84"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="1" Background="#FFCFE2F3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="25*"/>
                </Grid.ColumnDefinitions>
                <Rectangle Grid.Column="0" Width="20" Height="20" Fill="Red"
                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Кнопка"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    FontSize="16" Margin="10,0"/>
            </Grid>
        </Button>
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
            <Button Content="Кнопка 1" Background="#FFCFE2F3" Margin="8"/>
            <Button Content="Кнопка 2" Background="#FFCFE2F3" Margin="8"/>
            <Button Content="Кнопка 3" Background="#FFCFE2F3" Margin="8"/>
            <Button Content="Кнопка 4" Background="#FFCFE2F3" Margin="8"/>
            <Button Content="Кнопка 5" Background="#FFCFE2F3" Margin="8"/>
            <Button Content="Кнопка 6" Background="#FFCFE2F3" Margin="8"/>
            <Button Content="Кнопка 7" Background="#FFCFE2F3" Margin="8"/>
            <Button Content="Кнопка 8" Background="#FFCFE2F3" Margin="8"/>
        </StackPanel>
    </Grid>
</Window>
