<Window x:Class="HW_OOP_82.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_OOP_82"
        mc:Ignorable="d"
        Title="Окно по образу" Height="500" Width="800" WindowState="Normal" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="16.66*"/>
            <ColumnDefinition Width="16.66*"/>
            <ColumnDefinition Width="16.66*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Background="#FFA4C2F4"/>
        <Label Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" Background="#FFFFF2CC"/>
        <Label Grid.Column="1" Grid.Row="1" Grid.RowSpan="3"/>
        <Label Grid.Column="3" Grid.Row="1" Grid.RowSpan="3"/>
        <Label Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" Background="#FFC9DAF8"/>
        <TextBlock Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" VerticalAlignment="Center"
               Text="Серидина белого" FontSize="25" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
        <Label Grid.Column="0" Grid.Row="2" Background="#FFB4A7D6"/>
        <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"
               Text="По середине синего прямоугольника" FontSize="25" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
        <Label Grid.Column="0" Grid.Row="3" Background="#FFA4C2F4"/>
    </Grid>
</Window>
